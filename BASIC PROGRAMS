TO FIND SIMPLE INTEREST::::

#include <iostream>
using namespace std;
int main()
{ 
    int p,r,t;
    cout<<"ENTER P,R,T IN ORDER :";
    cin>>p>>r>>t;
    cout<<"si:"<<p*r*t/100;

    return 0;
}

TO FIND AVERAGE OF 3 NUMBERS::::

#include <iostream>
using namespace std;
int main()
{ 
    int a,b,c;
    cout<<"ENTER a,b,c IN ORDER :";
    cin>>a>>b>>c;
    cout<<(a+b+c)/3;

    return 0;
}

TO FIND GREATER OF 2 NUMBERS::::

#include <iostream>
using namespace std;
int main()
{ 
    int a,b;
    cout<<"ENTER a,b IN ORDER :";
    cin>>a>>b;
    if(a<b)
    cout<<b<<" is greater";
    else
    cout<<a<<" is greater";

    return 0;
}

