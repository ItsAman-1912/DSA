TO FIND SIMPLE INTEREST::::

#include <iostream>
using namespace std;
int main()
{ 
    int p,r,t;
    cout<<"ENTER P,R,T IN ORDER :";
    cin>>p>>r>>t;
    cout<<"si:"<<p*r*t/100;

    return 0;
}

TO FIND AVERAGE OF 3 NUMBERS::::

#include <iostream>
using namespace std;
int main()
{ 
    int a,b,c;
    cout<<"ENTER a,b,c IN ORDER :";
    cin>>a>>b>>c;
    cout<<(a+b+c)/3;

    return 0;
}

TO FIND GREATER OF 2 NUMBERS::::

#include <iostream>
using namespace std;
int main()
{ 
    int a,b;
    cout<<"ENTER a,b IN ORDER :";
    cin>>a>>b;
    if(a<b)
    cout<<b<<" is greater";
    else
    cout<<a<<" is greater";

    return 0;
}

TO FIND WHETHER A NUMBER IS EVEN OR ODD::::

#include <iostream>
using namespace std;
int main()
{
    int a;
    cout<<"Enter the number:";
    cin>>a;
    if(a==0)
    cout<<"NIETHER EVEN NOR ODD";
    else if(a%2==0)
    cout<<"EVEN";
    else
    cout<<"ODD";

    return 0;
}

TO FIND WHETHER NUMBER IS POSITIVE NEGATIVE OR ZERO::::

#include <iostream>
using namespace std;
int main()
{
    int a;
    cout<<"Enter the number:";
    cin>>a;
    if(a==0)
    cout<<"IT IS ZERO";
    else if(a>0)
    cout<<"POSITIVE NUMBER";
    else
    cout<<"NEGATIVE NUMBER";

    return 0;
}

TO FIND WHETHER GIVEN TRIANGLE IS POSSIBLE OR NOT:::

#include <iostream>
using namespace std;
int main()
{ 
    int a,b,c;
    cout<<"ENTER a,b,c IN ORDER :";
    cin>>a>>b>>c;
    if(a+b>c&&b+c>a&&c+a>b)
    cout<<"TRIANGLE IS POSSIBLE";
    else
    cout<<"NOT POSSIBLE";

    return 0;
}

TO PRINT ALL NUMBERS TILL GIVEN NUMBER::::

#include <iostream>
using namespace std;
int main()
{
    int a;
    cout<<"Enter the number:";
    cin>>a;
    for(int i=1;i<=a;i++)
    {
        cout<<i<<endl;
    }
    return 0;
}

TO PRINT ALL EVEN NUMBERS TILL PARTICULAR NUMBER:::

#include <iostream>
using namespace std;
int main()
{
    int a;
    cout<<"Enter the number:";
    cin>>a;
    for(int i=2;i<=a;i+=2)
    {
        cout<<i<<endl;
    }
    return 0;
}

TO PRINT ALL EVEN NUMBERS TILL PARTICULAR NUMBER:::

#include <iostream>
using namespace std;
int main()
{
    int a;
    cout<<"Enter the number:";
    cin>>a;
    for(int i=1;i<=a;i+=2)
    {
        cout<<i<<endl;
    }
    return 0;
}

TO PRINT SUM OF ALL NUMBERS TILL PARTICULAR NUMBER:::


#include <iostream>
using namespace std;
int main()
{
    int a,s=0;
    cout<<"Enter the number:";
    cin>>a;
    for(int i=1;i<=a;i++)
    {
        s=s+i;
    }
    cout<<"sum is: "<<s;
    return 0;
}

TO PRINT FACTORIAL OF A NUMBER:::

#include <iostream>
using namespace std;
int main()
{
    int a,p=1;
    cout<<"Enter the number:";
    cin>>a;
    for(int i=1;i<=a;i++)
    {
        p=p*i;
    }
    cout<<"factorial is: "<<p;
    return 0;
}

TO CHECK WHETHER GIVEN NUMBER IS PRIME OR NOT::::

#include <iostream>
using namespace std;
int main()
{
    int a,s=0;
    cout<<"Enter the number:";
    cin>>a;
    for(int i=2;i<a;i++)
    {
        if(a%i==0)
        s++;
    }
    if(s==0)
    cout<<"prime";
    else
    cout<<"not prime";
    return 0;
}
